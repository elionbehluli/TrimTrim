<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrimTrim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrimTrim.styles.css" asp-append-version="true" />
    <style>
        body {
            
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    @{
     bool IsPageActive(string page)
    {
    var currentPage = ViewContext.RouteData.Values["Page"]?.ToString();
    return string.Equals(currentPage, page, StringComparison.OrdinalIgnoreCase);
    }
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TrimTrim</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(IsPageActive("/Index") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item @(IsPageActive("/ProductMaster/index") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ProductMaster/index">Product</a>
                        </li>
                        <li class="nav-item @(IsPageActive("/ServiseMaster/index") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ServiceMaster/index">Services</a>
                        </li>
                        <li class="nav-item @(IsPageActive("/Admin/Login") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Login">Admin</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item @(IsPageActive("/Admin/AdminDashboard") ? "active" : "")">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/AdminDashboard">Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item @(IsPageActive("/User/UserDashboard") ? "active" : "")">
                                <a class="nav-link text-dark" asp-area="" asp-page="/User/UserDashboard">Dashboard</a>
                            </li>
                        }
                        <li class="nav-item @(IsPageActive("/User/LogIn") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/User/LogIn">LogIn</a>
                        </li>
                        <li class="nav-item @(IsPageActive("/User/SingUp") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-page="/User/SingUp">SingUp</a>
                        </li>
                    </ul>
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/forms.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
   
    
</body>
</html>
