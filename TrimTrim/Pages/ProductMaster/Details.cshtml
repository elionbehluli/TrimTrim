@page
@model TrimTrim.Pages.Service.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Qty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Qty)
        </dd>
        <!-- Display Photo -->
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Product?.PhotoPath))
            {
                <img src="~/images/@Url.Content(Model.Product.PhotoPath)" alt="Product Photo" class="img-thumbnail" />
            }
            else
            {
                <span>No Photo Available</span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Product?.Id">Edit</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
