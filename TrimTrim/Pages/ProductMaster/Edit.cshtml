@page
@model TrimTrim.Pages.Service.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Qty" class="control-label"></label>
                <input asp-for="Product.Qty" class="form-control" />
                <span asp-validation-for="Product.Qty" class="text-danger"></span>
            </div>
            <!-- Add the input for the photo file -->
            <div class="form-group">
                <label asp-for="PhotoUpload" class="control-label"></label>
                <input type="file" asp-for="PhotoUpload" class="form-control" onchange="displaySelectedFile(this)" />
                <img class="selectedImage" src="@Model.Product.PhotoPath" alt="Current Photo" class="img-thumbnail" />
                <span asp-validation-for="PhotoUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <input type="hidden" value="@Model.Product.Id" id="productId" />
    </div>
    @if (User.IsInRole("Admin"))
    {
        <button type="button" class="btn btn-primary" id="addPermissionBtn">Add Permission</button>
    }
</div>
<!-- User Selection Modal -->
<div class="modal fade" id="userSelectionModal" tabindex="-1" role="dialog" aria-labelledby="userSelectionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userSelectionModalLabel">Select Users</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Display the fetched user list here -->
                <ul id="userList"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="grantPermissionBtn">Grant Permission</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
