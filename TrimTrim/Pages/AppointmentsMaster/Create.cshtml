@page
@model TrimTrim.Pages.AppointmentsMaster.CreateModel
@{

}
<h2>Create Appointment</h2>

<form method="post">
    @if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            <label for="UserId">Select User:</label>
        <select asp-for="Appointment.UserId" asp-items="Model.UserOptions"></select>
    </div>
    }
    <div class="form-group">
        <label for="Date">Date:</label>
        <input asp-for="Appointment.Date" class="form-control" />
        <span asp-validation-for="Appointment.Date" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label for="Appointment_Time">Time:</label>
        <select asp-for="Appointment.Time" id="Appointment_Time" class="form-control">
            <option value="08:00">8:00 AM</option>
            <option value="09:00">9:00 AM</option>
            <option value="10:00">10:00 AM</option>
            <!-- Add more time options as needed -->
        </select>
        <span asp-validation-for="Appointment.Time" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label for="Description">Description:</label>
        <input asp-for="Appointment.Description" class="form-control" />
        <span asp-validation-for="Appointment.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Appointment</button>
</form>

