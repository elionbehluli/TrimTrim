@page
@model TrimTrim.Pages.AppointmentsMaster.IndexModel
@{
}
<div class="container" style="background-color: white; padding: 20px;">
<h2>Appointments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Description</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Date.ToShortDateString()</td>
                <td>@appointment.Time</td>
                <td>@appointment.Description</td>
                <td>@appointment.User.UserName</td>
                <td>
                    <a asp-page="Details" asp-route-id="@appointment.Id">Details</a> |
                    <a asp-page="Edit" asp-route-id="@appointment.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@appointment.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>